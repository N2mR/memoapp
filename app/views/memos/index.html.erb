<div class="container">
    <%= form_with(url: memos_path, remote: true) do |f| %>
        <div>
            <div class="col-md-12 mb-1">
                <%= f.text_field :subject, class:'form-control', placeholder:'件名' %>
            </div>
        </div>
        <div>
            <div class="col-md-12 mb-1">
                <%= f.text_area :memo, class:'form-control', placeholder:'メモ' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <%= f.submit 'メモを作成', class:"btn btn-primary ml-3"%>
            </div>
        </div>
    <% end %>
</div>



<div class="container memos-index">
    <% if @memos.any? %>
        <div class="container" id='create_memo_background'>
            <div class="memo-nav row">
                <p>subject</p>
                <p>memo</p>
            </div>
            <div class="memo-background" id='memo-background'>
                <% @memos.each do |m| %>
                    <%= link_to memo_path(m.id), class:'memo-link_to' do %>
                        <div class="memo-container">
                            <div class="subject-area">
                                <p class='subject'><%= m.subject %></p>
                            </div>
                            <div class="memo-area">
                                <p class='memo'><%= m.memo%></p>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% else %>
        <p class='no-memo'>メモはありません</p>
    <% end %>
</div>